<!DOCTYPE html>
<html lang="en">
<head>
    {% include 'parts/head.view.twig' %}
    <link rel="stylesheet" href="/assets/styles/listaEquipos.css" />
</head>
<body>
    <!--HEADER-->
    {% include 'parts/header.view.twig' %}

    <main>
        <!-- Header del Main -->
        <header class="header-equipos">
            <h1>EQUIPOS</h1>
        </header>

        <section class="equipos-grid">
            {% if listaEquipos|length > 0 %}
                {% for equipo in listaEquipos %}
                <article class="equipo">
                    <a href="/listaEquipos/equipo?nombre={{ equipo.nombre }}">
                        <img src="/assets/equipos/{{ equipo.escudo }}" alt="{{ equipo.nombre }}">
                        <h3>{{ equipo.nombre }}</h3>
                    </a>
                </article>
                {% endfor %}
            {% else %}
                <p>No hay equipos disponibles.</p>
            {% endif %}
        </section>

        {% if hayLogin %}
            <p class="pCargarEquipo"><a class="cargarEquipo" href="../liga/cargarEquipo"> Cargar equipo </a></p>
        {% endif %}
  
    </main>

    <!--FOOTER-->
    {% include 'parts/footer.view.twig' %}
</body>
</html>
