<!DOCTYPE html>
<html lang="en">
<head>
    {% include 'parts/head.view.twig' %}
    <link rel="stylesheet" href="/assets/styles/partidos.css" />
</head>
<body>
    <!--HEADER-->
    {% include 'parts/header.view.twig' %}
    
    <main>
        <header class="header-menu">
            <h1>TORNEOS</h1>
        </header>

      <section class="section-torneos">
   
        <ul class="lista-torneos">
            {% for torneo in listaTorneos %}
            <li>
                <article class="article-torneo">
                    <a href="./torneo?id={{torneo.id}}">
                        <h3> {{torneo.nombre}} </h3>                
                    </a>
                </article>
            </li>
            {% endfor %}
        </ul>
        {% if hayLogin %}
            <a class= "crear-torneo" href="./torneos/crearTorneo"> Crear torneo </a>
        {% endif %}
    </section>
    </main>

    <!--FOOTER-->
    {% include 'parts/footer.view.twig' %}
</body>
</html>
